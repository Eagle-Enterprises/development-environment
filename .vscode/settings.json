{
  "[markdown]": {
    "editor.defaultFormatter": "rvest.vs-code-prettier-eslint",
    "editor.wordWrap": "on",
    "editor.formatOnSave": true
  },
  "prettier.proseWrap": "always",
  "cSpell.words": ["dpkg", "hostmanager", "Stillabower", "Trivy"],
  "editor.trimAutoWhitespace": true,
  "files.autoSave": "onFocusChange",
  "python.linting.enabled": true,
  "git.autofetch": true,
  "git.confirmSync": true,
  "git.confirmSyncDelay": 1000,
  "security.workspace.trust.enabled": true,
  "editor.wordWrap": "on",
  "editor.minimap.enabled": true,
  "editor.minimap.renderCharacters": true,
  "editor.minimap.renderLineHighlight": "all",
  "editor.minimap.maxColumn": 1000,
  "editor.minimap.maxColumnOffset": 1000,
  "editor.minimap.maxLine": 1000,
  "editor.minimap.maxLineOffset": 1000,
  "editor.minimap.autoCloseBrackets": true,
  "editor.minimap.autoCloseTags": true,
  "editor.minimap.autoCloseBracketsWhenEnter": true,
  "editor.minimap.autoCloseTagsWhenEnter": true,
  "editor.bracketPairColorization.enabled": true,
  "editor.wordWrapColumn": 1000,
  "editor.renderLineHighlight": "all",
  "terminal.integrated.shell.windows": "C:\\Program Files\\Git\\bin\\bash.ext",
  "python.linting.pylintEnabled": true,
  "python.linting.flake8Enabled": true,
  "path-intellisense.extensionOnImport": true,
  "editor.folding": true,
  "problems.decorations.enabled": true,
  "problems.showCurrentInStatus": true,
  "breadcrumbs.enabled": true,
  "editor.cursorBlinking": "smooth",
  "editor.cursorStyle": "line",
  "editor.cursorWidth": 1,
  "editor.fontLigatures": true,
  "editor.fontSize": 14,
  "editor.fontWeight": "normal",
  "editor.autoClosingBrackets": "always",
  "editor.autoClosingQuotes": "always",
  "workbench.editor.highlightModifiedTabs": true,
  "terminal.integrated.persistentSessionReviveProcess": "onExit",
  "files.trimTrailingWhitespace": true,
  "window.restoreWindows": "all",
  "cSpell.enableFiletypes": ["!text"],
  "editor.guides.indentation": true,
  "editor.rulers": [80],
  "editor.formatOnSave": true
}
